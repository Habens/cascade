        <div class="col-md-10">
            <div class="container-fluid">
                <h2 test-field-account-name>${account.name}</h2>
            </div>

            <div class="container-fluid">
                <table class="table table-striped">
                    <tr>
                        <th>Date</th>
                        <th>Details</th>
                        <th>Debit</th>
                        <th>Credit</th>
                        <th>Balance</th>
                    </tr>

                    #set($balance = $account.balance)
                    #set($rowNumber = 0)
                    #foreach($transaction in $account.transactions)
                    <tr test-row-$rowNumber>
                        <td test-field-date>$transaction.date</td>
                        <td test-field-description>$transaction.description</td>

                        <td test-field-debit>
                        #if ($transaction.type == "DEBIT")
                            $transaction.amount
                        #end
                        </td>
                        <td test-field-credit>
                        #if ($transaction.type == "CREDIT")
                            $transaction.amount
                        #end
                        </td>
                        <td test-field-balance>$balance</td>
                    </tr>

                    #if ($transaction.type == "DEBIT")
                        #set($balance = $balance + $transaction.amount)
                    #else
                        #set($balance = $balance - $transaction.amount)
                    #end

                    #set($rowNumber = $rowNumber + 1)
                    #end
                </table>
            </div>
            <div class="container-fluid text-right">
