
<div class="container">


    <div class="row">
        <div class="col-md-2">
            #parse('sidenav.vm')
        </div>
        <div class="col-md-10">
            <div class="container-fluid">
                <h2>Payments</h2>
            </div>

            <div class="container-fluid">
                <h3>Regular Payments/ Standing Orders</h3>
                <table class="table table-striped">
                    <tr><th>Name</th><th>Amount</th><th>Date</th><th></th></tr>
                    <tr><td>Southern Elec</td><td>40</td><td>Monthly</td><td><a href="" class="btn btn-primary btn-sm">Modify</a></td></tr>
                    <tr><td>Virgin</td><td>80</td><td>Monthly</td><td><a href="" class="btn btn-primary btn-sm">Modify</a></td></tr>
                    <tr><td>TV</td><td>120</td><td>Yearly</td><td><a href="" class="btn btn-primary btn-sm">Modify</a></td></tr>
                </table>
            </div>

            <div class="container-fluid">
                <h3>Recent Payments</h3>
                <table class="table table-striped">
                    <tr><th>Date</th><th>Payee</th><th>Amount</th></tr>
                    <tr><td>31 July 2014</td><td>Southern Elec</td><td>40</td></tr>
                    <tr><td>31 July 2014</td><td>Virgin</td><td>80</td></tr>
                    <tr><td>31 July 2014</td><td>TV</td><td>120</td></tr>
                </table>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="well">
                            <h3>Make a transfer</h3>
                            <form class="" >
                                <div class="form-group">
                                From account
                                    <select class="form-control">
                                        <option>Premium Current</option>
                                        <option>Easy Saver</option>
                                        <option>Fancy Offset</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                  To account
                                    <select class="form-control">
                                        <option>Premium Current</option>
                                        <option>Easy Saver</option>
                                        <option>Fancy Offset</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    Date
                                    <div class="row">
                                        <div class="col-sm-4" >


                                            <label class="radio-inline"> <input type="radio" name="date" id="seasonSummer" value="now" checked> Now </label>
                                            <label class="radio-inline"> <input type="radio" name="date" id="seasonWinter" value="winter"> At </label>

                                        </div>
                                        <div class="col-sm-8" >
                                            <input type="text" class="form-control" maxlength="10"></input>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    Amount
                                    <div class="row">
                                        <div class="col-md-4 col-md-offset-5" style="padding-right:0px" >
                                            <input type="text" class="form-control text-right"  maxlength="9"></input>
                                        </div>
                                        <div class="col-md-1" > <h4>.</h4>
                                        </div>
                                        <div class="col-sm-2" >
                                            <input type="text" class="form-control text-left" maxlength="2"></input>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Transfer</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="well">
                            <h3>Make a payment</h3>
                            <form class="form-horizontal" >
                                <div class="form-group">
                                From account
                                    <select class="form-control">
                                        <option>Premium Current</option>
                                        <option>Easy Saver</option>
                                        <option>Fancy Offset</option>
                                    </select>
                                </div>

                                <div class="row">
                                    <div class="col-sm-4" >
                                        <div class="form-group">
                                            Account Number
                                            <input class="form-control" type="text" maxlength="8"></input>
                                        </div>
                                    </div>
                                    <div class="col-sm-8" >
                                        <div class="form-group">
                                            Sort Code
                                            <div class="row">
                                                <div class="col-sm-3" >
                                                    <input type="text" class="form-control text-left" maxlength="2"></input>
                                                </div>
                                                <div class="col-sm-3" >
                                                    <input type="text" class="form-control text-left" maxlength="2"></input>
                                                </div>
                                                <div class="col-sm-3" >
                                                    <input type="text" class="form-control text-left" maxlength="2"></input>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    Date
                                    <div class="row">
                                        <div class="col-sm-4" >


                                            <label class="radio-inline"> <input type="radio" name="date" id="seasonSummer" value="now" checked> Now </label>
                                            <label class="radio-inline"> <input type="radio" name="date" id="seasonWinter" value="winter"> At </label>

                                        </div>
                                        <div class="col-sm-8" >
                                            <input type="text" class="form-control" maxlength="10"></input>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    Amount
                                    <div class="row">
                                        <div class="col-md-4 col-md-offset-5" style="padding-right:0px" >
                                            <input type="text" class="form-control text-right"  maxlength="9"></input>
                                        </div>
                                        <div class="col-md-1" > <h4>.</h4>
                                        </div>
                                        <div class="col-sm-2" >
                                            <input type="text" class="form-control text-left" maxlength="2"></input>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Pay</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


</div>
